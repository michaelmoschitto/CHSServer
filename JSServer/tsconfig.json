{
    "compilerOptions": {
        "module": "commonjs",
        "allowJs": true,
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "sourceMap": false,
        "baseUrl": ".",
        "outDir": "./built",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "Src/**/*",
        "Src/connection.json"
    ]
}
